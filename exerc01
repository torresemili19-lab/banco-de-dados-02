("Banguela", 2200, 2000, 30, 5),
("Caelum", 900, 800, 10, 1),
("Sylvanas", 3100, 950, 35, 1),
("Drakonio", 2800, 1700, 29, 2);

-- 6) SELECT ataque > 2000
SELECT * FROM tb_personagens
WHERE poder_ataque > 2000;

-- 7) SELECT defesa entre 1000 e 2000
SELECT * FROM tb_personagens
WHERE poder_defesa BETWEEN 1000 AND 2000;

-- 8) SELECT LIKE (nome com C)
SELECT * FROM tb_personagens
WHERE nome LIKE "%C%";

-- 9) INNER JOIN completo
SELECT p.*, c.nome AS classe, c.tipo
FROM tb_personagens p
INNER JOIN tb_classes c ON c.id = p.classe_id;

-- 10) INNER JOIN filtrando classe (ex: Arqueiro)
SELECT p.*, c.nome AS classe
FROM tb_personagens p
INNER JOIN tb_classes c ON c.id = p.classe_id
WHERE c.nome = "Arqueiro";
