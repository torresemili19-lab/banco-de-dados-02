-- 5) Inserir 8 personagens
INSERT INTO tb_personagens (nome, poder_ataque, poder_defesa, nivel, classe_id) VALUES
("Lilith", 1800, 1200, 20, 1),
("Smoke", 2500, 1800, 32, 2),
("Luna", 3500, 900, 40, 3),
